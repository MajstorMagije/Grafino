    <script>
        // ... (Dio za prevođenje ostaje nepromijenjen) ...
        const translations = {
            bs: {
                pageTitle: "Grafino - Vizualni Identitet & Dizajn",
                navUsluge: "Usluge",
                navPortfolio: "Portfolio",
                navKontakt: "Kontakt",
                heroTitle: "Vizualni Identitet Koje Ostvaruje Rezultate",
                heroText: "Mi kreiramo profesionalni dizajn koji vašem brendu daje prepoznatljivost i ostavlja trajan utisak.",
                heroCTA: "Započnite Projekat",
                uslugeTitle: "Naše Ključne Usluge",
                usluga1Title: "Dizajn Logotipa",
                usluga1Text: "Kreiranje jedinstvenog i funkcionalnog logotipa koji savršeno odražava vrijednosti vašeg brenda i ističe se na tržištu.",
                usluga2Title: "Kompletan Brending",
                usluga2Text: "Izrada cjelokupnog vizualnog identiteta (boje, tipografija, standardi) za profesionalnu i dosljednu komunikaciju.",
                usluga3Title: "Dizajn za Društvene Mreže",
                usluga3Text: "Optimizovani vizuali za Instagram, Facebook i LinkedIn (objave, Story i Reels predlošci) koji angažuju vašu publiku.",
                portfolioTitle: "Naši Najbolji Radovi",
                portfolioCTA: "Više radova na Instagramu →",
                kontaktTitle: "Započnimo saradnju!",
                kontaktText: "Javite nam se s detaljima vašeg projekta ili brendinga. Uskoro ćemo vam poslati ponudu prilagođenu vašim potrebama.",
                kontaktCTA: "Pošalji Upit",
                footerText: "GRAFINO | © 2025 Sva prava zadržana.",
            },
            en: {
                pageTitle: "Grafino - Visual Identity & Design",
                navUsluge: "Services",
                navPortfolio: "Portfolio",
                navKontakt: "Contact",
                heroTitle: "Visual Identity That Delivers Results",
                heroText: "We create professional design that gives your brand recognition and leaves a lasting impression.",
                heroCTA: "Start Your Project",
                uslugeTitle: "Our Key Services",
                usluga1Title: "Logo Design",
                usluga1Text: "Creating a unique and functional logo that perfectly reflects your brand's values and stands out in the market.",
                usluga2Title: "Complete Branding",
                usluga2Text: "Development of a complete visual identity (colors, typography, standards) for professional and consistent communication.",
                usluga3Title: "Social Media Design",
                usluga3Text: "Optimized visuals for Instagram, Facebook, and LinkedIn (posts, Story, and Reels templates) that engage your audience.",
                portfolioTitle: "Our Best Works",
                portfolioCTA: "More work on Instagram →",
                kontaktTitle: "Let's Start Collaborating!",
                kontaktText: "Contact us with the details of your project or branding. We will soon send you a tailored offer.",
                kontaktCTA: "Send Inquiry",
                footerText: "GRAFINO | © 2025 All rights reserved.",
            }
        };

        let currentLang = 'bs';
        const langSwitchButton = document.getElementById('langSwitch');

        function setLanguage(lang) {
            currentLang = lang;
            const content = translations[lang];

            document.getElementById('pageTitle').textContent = content.pageTitle;
            document.getElementById('heroTitle').textContent = content.heroTitle;
            document.getElementById('heroText').textContent = content.heroText;
            document.getElementById('heroCTA').textContent = content.heroCTA;
            document.getElementById('uslugeTitle').textContent = content.uslugeTitle;
            document.getElementById('portfolioTitle').textContent = content.portfolioTitle;
            document.getElementById('portfolioCTA').textContent = content.portfolioCTA;
            document.getElementById('kontaktTitle').textContent = content.kontaktTitle;
            document.getElementById('kontaktText').textContent = content.kontaktText;
            document.getElementById('kontaktCTA').textContent = content.kontaktCTA;
            document.getElementById('footerText').textContent = content.footerText;

            document.querySelectorAll('[data-key]').forEach(el => {
                const key = el.getAttribute('data-key');
                if (content[key]) {
                    el.textContent = content[key];
                }
            });

            langSwitchButton.textContent = lang === 'bs' ? 'ENG' : 'BOS';
        }

        langSwitchButton.addEventListener('click', () => {
            const newLang = currentLang === 'bs' ? 'en' : 'bs';
            setLanguage(newLang);
        });

        // 2. FUNKCIONALNOST ZA TEMU (Dark/Light Mode) (nepromijenjeno)
        const toggleSwitch = document.getElementById('checkbox');
        const body = document.body;

        function checkTheme() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'light') {
                body.classList.add('light-mode');
                toggleSwitch.checked = true;
            }
        }

        toggleSwitch.addEventListener('change', () => {
            if (toggleSwitch.checked) {
                body.classList.add('light-mode');
                localStorage.setItem('theme', 'light');
            } else {
                body.classList.remove('light-mode');
                localStorage.setItem('theme', 'dark');
            }
        });
        
        // 3. NOVO: FUNKCIONALNOST ZA HAMBURGER MENI
        const hamburger = document.getElementById('hamburger');
        const mainNav = document.getElementById('mainNav');

        hamburger.addEventListener('click', () => {
            mainNav.classList.toggle('open');
            // Promjena ikone iz tri crte (bars) u X (xmark)
            const icon = hamburger.querySelector('i');
            if (mainNav.classList.contains('open')) {
                icon.classList.remove('fa-bars');
                icon.classList.add('fa-xmark');
            } else {
                icon.classList.remove('fa-xmark');
                icon.classList.add('fa-bars');
            }
        });
        
        // Zatvaranje menija klikom na link (na mobitelu)
        mainNav.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    mainNav.classList.remove('open');
                    document.getElementById('hamburger').querySelector('i').classList.replace('fa-xmark', 'fa-bars');
                }
            });
        });


        // Inicijalno učitavanje teme i postavljanje jezika
        window.onload = () => {
            checkTheme();
            setLanguage(currentLang); 
        };

    </script>
</body>
</html>
